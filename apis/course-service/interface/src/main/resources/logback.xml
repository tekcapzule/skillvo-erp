<?xml version="1.0" encoding="UTF-8"?>
<configuration>
    <!-- Console Appender -->
    <appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%d{yyyy-MM-dd HH:mm:ss} %-5level [%X{requestId}] [%thread] %logger{36} - %msg%n</pattern>
        </encoder>
    </appender>

    <!-- AWS CloudWatch Appender -->
    <appender name="AWS_CLOUDWATCH" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%d{yyyy-MM-dd HH:mm:ss} %-5level [%X{requestId}] [%thread] %logger{36} - %msg%n</pattern>
        </encoder>
    </appender>

    <!-- Root Logger -->
    <root level="INFO">
        <appender-ref ref="CONSOLE" />
        <appender-ref ref="AWS_CLOUDWATCH" />
    </root>

    <!-- Application Loggers -->
    <logger name="com.skillvo" level="DEBUG" additivity="false">
        <appender-ref ref="CONSOLE" />
        <appender-ref ref="AWS_CLOUDWATCH" />
    </logger>

    <!-- Framework Loggers -->
    <logger name="org.springframework" level="INFO" additivity="false">
        <appender-ref ref="CONSOLE" />
        <appender-ref ref="AWS_CLOUDWATCH" />
    </logger>

    <!-- AWS SDK Loggers -->
    <logger name="com.amazonaws" level="WARN" additivity="false">
        <appender-ref ref="CONSOLE" />
        <appender-ref ref="AWS_CLOUDWATCH" />
    </logger>
</configuration> 